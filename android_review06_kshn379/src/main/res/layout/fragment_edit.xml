<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addViewModel"
            type="com.example.android_review06_kshn379.AddViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".EditFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBar_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#330333"
            app:navigationIcon="@drawable/left_back"
            app:title="동물 정보 수정"
            app:titleTextColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_edit_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{addViewModel.animalType}"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.animalName}"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_edit_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.animalAge}"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_edit_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.animalCount}"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_edit_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.animalDetail}"
                android:textSize="16dp" />


        </LinearLayout>


    </LinearLayout>
</layout>