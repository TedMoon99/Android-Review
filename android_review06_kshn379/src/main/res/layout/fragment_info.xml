<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addViewModel"
            type="com.example.android_review06_kshn379.AddViewModel" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".InfoFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolBar_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#191970"
            app:navigationIcon="@drawable/left_back"
            app:title="동물 정보"
            app:titleTextColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/textView_info_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{addViewModel.animalType}"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/textView_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.zooName}"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_info_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.zooAge}"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_info_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.zooCount}"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_info_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{addViewModel.zooDetail}"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</layout>